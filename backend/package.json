{
  "name": "@conduits-xyz/backend",
  "version": "0.3.1",
  "private": true,
  "description": "backend services of conduits.xyz",
  "author": "conduits.xyz",
  "license": "MIT",
  "scripts": {
    "lint-resource-server": "eslint crud-server/src --cache",
    "lint-resource-server:fix": "eslint --fix crud-server/src",
    "lint-gateway-server": "eslint proxy-server/src --cache",
    "lint-gateway-server:fix": "eslint --fix proxy-server/src",
    "lint-lib": "eslint lib --cache",
    "lint-lib:fix": "eslint --fix lib --cache",
    "lint-config": "eslint config --cache",
    "lint-config:fix": "eslint --fix config --cache",
    "lint": "npm run lint-config && npm run lint-lib && npm run lint-resource-server && npm run lint-gateway-server",
    "lint:fix": "npm run lint-config:fix && npm run lint-lib:fix && npm run lint-resource-server:fix && npm run lint-gateway-server:fix",
    "test-model": "mocha --exit crud-server/src/model.test.js",
    "test-model-with-coverage": "nyc --reporter=text mocha --exit crud-server/src/model.test.js",
    "test-rest": "mocha --exit crud-server/src/routes.test.js",
    "test-rest-with-coverage": "nyc --reporter=text mocha --exit crud-server/src/routes.test.js",
    "test-gateway": "mocha --timeout 10000 --exit proxy-server/src/server.test.js",
    "start-resource-server": "node --unhandled-rejections=strict crud-server/src/server.js",
    "start-gateway-server": "node --unhandled-rejections=strict proxy-server/src/server.js",
    "createdb": "node crud-server/src/createdb.js",
    "resource-server-api-doc": "redoc-cli bundle spec/resource.api.v1.yaml --output api-docs/resource.html",
    "generic-api-doc": "redoc-cli bundle spec/generic.api.v1.yaml --options.theme.colors.primary.main=purple --output api-docs/conduit.html",
    "api-doc-reload": "live-server --watch=api-docs/ --open=api-docs/",
    "api-doc-watch": "watch \"npm run resource-server-api-doc && npm run generic-api-doc\" ./spec",
    "api-doc": "concurrently \"npm run api-doc-reload\" \"npm run api-doc-watch\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-safe": "8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "localstorage-polyfill": "^1.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nanoid": "^3.1.12",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^5.1.0",
    "live-server": "^1.2.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "redoc-cli": "^0.9.12",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "**/__snapshots__/*"
  ]
}
